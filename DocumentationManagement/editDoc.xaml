            <Label.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0"/>
            </Label.Effect>
        </Label>
        <Grid  MouseDown="Grid_MouseDown" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="476">
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Label Content="Modify" HorizontalAlignment="Left" Margin="62,4,-236,0" VerticalAlignment="Top" Width="650" FontSize="16">
                <Label.Background>
                    <ImageBrush/>
                </Label.Background>
            </Label>
