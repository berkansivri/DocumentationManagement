        <DatePicker x:Name="dtpDate" HorizontalAlignment="Left" Margin="179,123,0,0" VerticalAlignment="Top" Height="24" Width="120" DisplayDate="2016-12-07" SelectedDateFormat="Short" LostFocus="dtpDate_LostFocus" PreviewTextInput="dtpDate_PreviewTextInput"/>
