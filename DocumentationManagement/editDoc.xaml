        <Image x:Name="imgSubmittedBy" HorizontalAlignment="Left" Height="7" Margin="725,128,0,0" VerticalAlignment="Top" Width="10" RenderTransformOrigin="0.562,0.708" ToolTip="Can't leave blank"/>
